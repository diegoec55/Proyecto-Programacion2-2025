<%- include('../partials/header.ejs') %>
<div>
        <h2> Crear Cuenta</h2>

        <% if (errors.length > 0) { %>
            <div>
                <strong> Por favor corrige los siguientes errores:</strong>
                <ul>
                    <% errors.forEach(error => { %>
                        <li><%= error.msg %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>

        <form action="/auth/register" method="POST" enctype="multipart/form-data">
            <div>
                <label for="nombre"> Nombre:</label>
                <input type="text" id="nombre" name="nombre" value="<%= oldData.nombre || '' %>">
            </div>
            <div>
                <label for="email"> Email:</label>
                <input type="text" id="email" name="email" value="<%= oldData.email || '' %>">
            </div>
            <div>
                <label for="password"> Contraseña:</label>
                <input type="text" id="password" name="password">
                <small> Minimo 6 caracteres </small>
            </div>
            <div>
                <label for="re-password">Confirmar Contraseña:</label>
                <input type="text" id="re-password" name="re-password">
                
            </div>

            <div>
                <label for="imagen_usuario"> Imagen de perfil</label>
                <input type="file"
                        id="imagen_usuario"
                        name="imagen_usuario" 
                        accept="image/*"
                >
                <small> Opcional. maximo 5MB. Formatos: JPG, PNG, GIF </small>
                <% const errorImagen = errors.find(e => e.path== 'imagen_usuario') %>
                <% if (errorImagen) { %>
                    <span class="error-msg">
                        <%= errorImagen.msg %>
                    </span>
                <% } %>
            </div>

            <button type="submit">
                Registrarse
            </button>
        </form>

        <p>
            ya tienes cuenta? <a href="/auth/login" style="color: #007bff;"> Inicia sesion</a>
        </p>
    </div>
<%- include('../partials/footer.ejs') %>